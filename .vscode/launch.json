        {
            "name": "Serveur Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:1234/Attable-Xampp/index2.html",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://localhost:1234",
                    "path": "c:/xampp/htdocs"
                },
                {
                    "url": "http://localhost:1234",
                    "path": "c:/xampp/htdocs"
                },
                {
                    "url": "http://localhost:1234",
                    "path": "c:/xampp/htdocs"
                }
            ]
        },
        {
            "name": "Attach",
            "type": "firefox",
            "request": "attach"
        },
        {
            "name": "Launch WebExtension",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "addonPath": "${workspaceFolder}"
        }
    ]
}